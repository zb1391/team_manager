    <div class = "col-xs-6">
      <h3 class ="centered">Gym Ratz AAU Boys</h3>
      <div class ="row">
        <ul>
        <% Team.teams_by_gender("Boys").each do |team| %>
          <li class = "no-bullet centered"> <%= link_to team.short_team_name, team, :class => "black-text" %></li>
        <% end %>
      </ul>
      </div>
    </div>
  </div>
</div>

