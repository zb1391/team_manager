              <% if !unique_event.nil? %>
                <li class="bold-text">      
                  <%= "#{unique_event.the_time.strftime('%l:%M %P')}-#{unique_event.end_time.strftime('%l:%M %P')}"%>
                </li>
                <li> <%="Court 2" %></li>
              <% end %>
            </ul>

      <%end%>
      <% cur_time += 1.hour; %>
    <%end %>
  </tr>
</table>
<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Event Date</th>
      <th>Event Time</th>
      <th>Event location</th>
      <th>Eventtype</th>
      <th>Team</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.the_date %></td>
        <td><%= event.the_time.strftime('%l:%M %P')%></td>
        <td><%= event.location.name %></td>
        <td><%= event.eventtype.name %></td>
        <td><%= event.team.team_name %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= calendar @events do |event| %>
  <%logger.debug "Events start_time: #{event.start_time}" %>
  <ul>
    <dd><%= "#{event.eventtype.name}: "%></dd>
    <dt>
      <%= "#{event.team.team_name}" %> <br />
      <%= "#{event.location.name}:" %> <br />
      <%= "#{event.the_time.strftime('%l:%M %P')}"%>
      <% if !event.end_time.nil? %>
      <%= "-#{event.end_time.strftime('%l:%M %P')}" %>
      <% end %>
    </dt>
        <% if proper_coach?(event.team.coach) %>
          <%= link_to 'Edit', edit_event_path(event) %>
          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
  </ul>
<% end %>

