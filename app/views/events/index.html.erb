                <li class="bold-text">      
                  <%= "#{unique_event.the_time.strftime('%l:%M %P')}-#{unique_event.end_time.strftime('%l:%M %P')}"%>
                </li>
                <li> <%="Court 2" %></li>
              <% end %>
            </ul>
          <ul>
            <% Event.events_on_court_at_time(d, cur_time+30.minutes, 2).search(params[:q]).result(distinct: true).to_a.each do |p| %>
               <li style = "color:#006600;"><%=p.team.team_name %></li>
              <%end%>
