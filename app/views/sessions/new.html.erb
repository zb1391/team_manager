<h1><%= @my_status %></h1>
<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, class: name %>
<% end %>
<%= form_for(:session, :url => sessions_path) do |f| %>
<div class="field">
	<%= f.label :email %> <br />
	<%= f.text_field :email %>
</div>
<div class="field">
	<%= f.label :password %> <br />
	<%= f.password_field :password %>
</div>
<div class="actions">
	<%= f.submit "Sign in" %>
</div>
<% end %>

