<div class = "static-cols-green">
<h2 class = "centered"><%= @organization.tournament.name %></h2>
<h2 class = "centered" id = "dark-green-text"><%= "#{@organization.name} Registration" %></h2>
<h2 class = "no-padding"> Teams</h2>
<h4 id = "black-text" class = "med-margin-left"> <%= "(#{number_to_currency(@organization.tournament.price)} per team)"%> </h4> <br />
<table class = "plain-table med-margin-left">
	<tr>
		<th>Team</th>
		<th>Coach</th>
		<th>Email</th>
		<th>Phone </th>
		<th>Pay for Individual Team</th>
	</tr>
<% cur_amount = @organization.amount_paid %>
<% for club in @organization.clubs %>
	<%cur_amount -= @organization.tournament.price %>
	<tr>
		<td> <%= "#{club.grade} Grade #{club.gender}"  %></td>
		<td> <%= club.coach %></td>
		<td> <%= club.email %></td>
		<td> <%=  number_to_phone(club.cell, area_code: true) %></td>
		<td>
			<% if cur_amount >= 0 %>
				<dd>Paid</dd>
			<% else %>
				<%= form_tag "https://www.paypal.com/cgi-bin/webscr" do %>
				  <%= hidden_field_tag :cmd, "_s-xclick" %>
				  <%= hidden_field_tag :encrypted, club.paypal_encrypted("www.downtownsports.org", payment_notifications_url) %>
				  <p><%= submit_tag "Pay With PayPal" %></p>
				<% end %>
			<% end %>
		</td>
	</tr>
<% end %>
</table>
<%= link_to 'Add More Teams', edit_organization_path(@organization), id: "large-text", class: "med-margin-left" %> <br /> <br />
<% if @organization.amount_paid <= 0 %>
	<dt> Pay For All Teams</dt>
	<%= form_tag "https://www.paypal.com/cgi-bin/webscr" do %>
	  <%= hidden_field_tag :cmd, "_s-xclick" %>
	  <%= hidden_field_tag :encrypted, @organization.paypal_encrypted("www.downtownsports.org", payment_notifications_url) %>
	  <p><%= submit_tag "Pay With PayPal" %></p>
	<% end %>
<% end %>
<div class = "row">
	<div class = "col-xs-6">
	<h2>Contact</h2>
		<dt class = "med-margin-left"> <%= @organization.contact_name %></dt>
		<dd class = "med-margin-left"> <%= @organization.email %></dd>
		<dd class = "med-margin-left"> <%= number_to_phone(@organization.phone, area_code: true) %></dd>
		<%= link_to 'Edit', edit_organization_path(@organization), class: "med-margin-left" %> 
	</div>
	<div class ="col-xs-6">
<h2> Summary </h2>
	<table class = "med-margin-left">
		<tr>
			<td> <dt>Teams Entered:</dt></td>
			<td><dd> <%= @organization.clubs.size %></dd>  </td>
		</tr>
		<tr>
			<td> <dt>Total</dt></td>
			<td><dd> <%= number_to_currency @organization.clubs.size*@organization.tournament.price %></dd></td>
		</tr>
		<tr>
			<td> <dt>Amount Paid</dt></td>
			<td> <dd> <%= number_to_currency @organization.amount_paid %></dd></td>
		</tr>
	</table>
	</div>
	
</div>
<% if is_admin? %>
	<br />
	<%= link_to 'Back', organizations_path %>
<% end %>
</div>